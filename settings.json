{
  // Vim Extension Settings
  "vim.leader": "<Space>",
  "vim.foldfix": true,
  "vim.highlightedyank.color": "rgba(230, 97, 89, 0.7)",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "white",
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Leader>", "t", "n"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<Leader>", "t", "N"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<Leader>", "f", "n"],
      "commands": ["workbench.action.focusNextGroup"]
    },
    {
      "before": ["<Leader>", "f", "N"],
      "commands": ["workbench.action.focusPreviousGroup"]
    },
    {
      "before": ["<Leader>", "p", "n"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<Leader>", "p", "N"],
      "commands": ["editor.action.marker.previous"]
    },
    {
      "before": ["<Leader>", "v", "i", "f"],
      "commands": ["workbench.action.moveEditorToFirstGroup"]
    },
    {
      "before": ["<Leader>", "v", "i", "l"],
      "commands": ["workbench.action.moveEditorToLastGroup"]
    },
    {
      "before": ["<Leader>", "v", "i", "n"],
      "commands": ["workbench.action.moveEditorToNextGroup"]
    },
    {
      "before": ["<Leader>", "v", "i", "N"],
      "commands": ["workbench.action.moveEditorToPreviousGroup"]
    },
    {
      "before": ["<Leader>", "c", "e", "g"],
      "commands": ["workbench.action.closeEditorsAndGroup"]
    },
    {
      "before": ["<Leader>", "c", "o", "e"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["<Leader>", "c", "e", "o"],
      "commands": ["workbench.action.closeEditorsInOtherGroups"]
    },
    {
      "before": ["<Leader>", "s", "h"],
      "commands": ["workbench.action.splitEditorLeft"]
    },
    {
      "before": ["<Leader>", "s", "j"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["<Leader>", "s", "k"],
      "commands": ["workbench.action.splitEditorUp"]
    },
    {
      "before": ["<Leader>", "s", "l"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    { "before": ["leader", "r"], "commands": ["editor.action.rename"] },
    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },
    // Other keybindings
    { "after": ["g", "g", "V", "G"], "before": ["<c-a>"] },
    { "before": ["<leader>", "k"], "commands": ["editor.action.showHover"] },
    { "after": ["^"], "before": ["H"] },
    { "after": ["$"], "before": ["L"] },
    {
      "before": ["<Leader>", "p"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<Leader>", "e", "f"],
      "commands": ["workbench.files.action.showActiveFileInExplorer"]
    },
    {
      "before": ["<Leader>", "t", "f"],
      "commands": ["timeline.focus"]
    },
    {
      "before": ["<Leader>", "g", "f"],
      "commands": ["workbench.scm.focus"]
    },
    {
      "before": ["<Leader>", "g", "d"],
      "commands": ["git.clean"]
    },
    {
      "before": ["<Leader>", "g", "s"],
      "commands": ["git.stage"]
    },
    {
      "before": ["<Leader>", "f", "d"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<Leader>", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<Leader>", "l"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<Leader>", "h"],
      "commands": ["workbench.action.toggleAuxiliaryBar"]
    },
    {
      "before": ["<Leader>", "o"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<Leader>", "i"],
      "commands": ["workbench.action.openQuickChat.copilot"]
    },
    {
      "before": ["<Leader>", "g", "s", "N"],
      "commands": ["editor.action.dirtydiff.previous"]
    },
    {
      "before": ["<Leader>", "c", "n"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["<Leader>", "d", "s"],
      "commands": ["workbench.files.action.compareWithSaved"]
    },
    {
      "before": ["<Leader>", "d", "p"],
      "commands": ["gitlens.diffWithPrevious"]
    },
    {
      "before": ["<Leader>", "c", "N"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    //gcommands
    {
      "before": ["g", "p", "d"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "p", "i"],
      "commands": ["editor.action.peekImplementation"]
    },
    {
      "before": ["g", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      "before": ["g", "s"],
      "commands": ["editor.action.gotoSymbol"]
    },
    {
      "before": ["g", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["g", "p", "t"],
      "commands": ["editor.action.peekTypeDefinition"]
    },
    {
      "before": ["g", "c", "h"],
      "commands": ["references-view.showCallHierarchy"]
    },
    {
      "before": ["leader", "1"],
      "commands": ["workbench.action.focusFirstEditorGroup"]
    },
    {
      "before": ["leader", "2"],
      "commands": ["workbench.action.focusSecondEditorGroup"]
    },
    {
      "before": ["leader", "3"],
      "commands": ["workbench.action.focusThirdEditorGroup"]
    }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<Leader>", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<Leader>", "s"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<Leader>", "d"],
      "commands": ["editor.action.duplicateSelection"]
    },
    {
      "before": ["<Leader>", "f"],
      "commands": ["editor.action.formatSelection"]
    },
    {
      "before": ["<Leader>", "u"],
      "commands": ["editor.action.transformToTitlecase"]
    },
    {
      "before": ["<Leader>", "o"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<Leader>", "p"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["editor.action.moveLinesUpAction"]
    }
  ],

  // Terminal and Shell Settings
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Workbench and UI Settings
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.editor.enablePreview": false,
  "window.openFilesInNewWindow": "off",
  "workbench.sideBar.location": "right",
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  // Editor Settings
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.suggest.insertMode": "insert",
  "editor.stickyScroll.enabled": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // Security Settings
  "security.workspace.trust.untrustedFiles": "open",
  "security.allowedUNCHosts": [
    "wsl$"
],

  // File Explorer Settings
  "explorer.copyRelativePathSeparator": "/",
  "explorer.confirmDelete": false,

  // Git and GitHub Settings
  "git.openRepositoryInParentFolders": "always",
  "githubPullRequests.fileListLayout": "tree",
  "githubPullRequests.pullBranch": "never",
  "gitlens.views.branches.files.layout": "tree",
  "gitlens.views.commits.files.layout": "tree",
  "gitlens.views.contributors.files.layout": "list",
  "gitlens.views.contributors.showAllBranches": true,

  // Notebook Settings
  "notebook.stickyScroll.enabled": true,

  // Remote Development Settings
  "remote.autoForwardPortsSource": "hybrid",

  // Extension Specific Settings
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
    "pull:command"
  ],
  "gitlens.views.remotes.branches.layout": "list",
  "vim.statusBarColors.easymotionmode": ["#007acc", "#ffffff"],
  "vim.easymotion": true,
  "vim.statusBarColors.visual": ["#5f00af", "#ffffff"],
  "diffEditor.renderSideBySide": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "eslint.format.enable": true,
  "gitlens.graph.minimap.enabled": false,
  "gitlens.ai.experimental.provider": "openai",
  "gitlens.ai.experimental.openai.model": "gpt-4",
  "gitlens.views.commitDetails.files.layout": "list",
  "settingsSync.ignoredExtensions": [],
}
